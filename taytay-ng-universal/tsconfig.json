{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    // types option has been previously configured
    "types": [
      // add node as an option
      "node",
      "jasmine"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "exclude": [
     "**/*.spec.ts",
      "e2e/*"
    ]
  }
}
